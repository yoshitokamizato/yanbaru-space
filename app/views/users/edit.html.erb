<h3>ユーザー編集</h3>

<%= form_with model: @user, local: true do |f| %>
  <% if session[:google_image] %>
    <p>画像を変更したい場合はGoogleアカウントにて変更してください</p>
  <% else %>
    <div class="form_group">
      <label>プロフィール画像：</label>
      <%= f.file_field :image %>
    </div>
  <% end %>

  <div class="form_group">
    <label>メールアドレス：</label>
    <%= f.text_field :email, :placeholder => "メールアドレスを入力して下さい"%>
  </div>

  <div class="form_group">
    <%= f.submit "送信", data: { confirm: "更新しますか？"}, class: "btn btn-success"  %>
  </div>
<% end %>