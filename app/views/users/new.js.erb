const button = document.getElementsByClassName("contact_form");
const InputElement = document.createElement('input');
const ButtonElement = document.createElement('button');
const FormElement = document.getElementById('form-text');
const ContactElement = document.querySelectorAll(".contact_form");



ContactElement.forEach((value, index) => {
  value.addEventListener("click", () => {
    value.remove()
    InputElement.type = 'text';
    ButtonElement.textContent = "送信"
    FormElement.appendChild(InputElement);
    FormElement.appendChild(ButtonElement);
    ContactElement.style.height = "240px";
  })
});
